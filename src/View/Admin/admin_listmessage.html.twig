{% extends 'Layout/dashboard.html.twig' %}
{% block content %}
	<div>
		<h3 class="mt-3">Message pour les groupes :</h3>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">Lastname</th>
					<th scope="col">Firstname</th>
					<th scope="col">Instrument</th>
					<th scope="col">Niveau</th>
					<th scope="col">Style</th>
					<th scope="col">Localisation</th>
					<th scope="col">Email</th>
					<th scope="col">Phone</th>
					<th scope="col">Message</th>
				</tr>
			</thead>
			<tbody>
				{% for message in messagesBand %}
					<tr>
						<td>{{message.lastname}}</td>
						<td>{{message.firstname}}</td>
						<td>{{message.instrument}}</td>
						<td>{{message.level}}</td>
						<td>{{message.style}}</td>
						<td>{{message.localisation}}</td>
						<td>{{message.email}}</td>
						<td>{{message.phone}}</td>
						<td>{{message.message}}</td>
						<td>
							<a href="/message/delete?id={{message_band.id}}" class="btnCardSearch btn p-2 rounded m-2">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<h3 class="mt-3">Message pour l'admin :</h3>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">Lastname</th>
					<th scope="col">Firstname</th>
					<th scope="col">Email</th>
					<th scope="col">Phone</th>
					<th scope="col">Message</th>
				</tr>
			</thead>
			<tbody>
				{% for messageC in messagesContact %}
					<tr>
						<td>{{messageC.lastname}}</td>
						<td>{{messageC.firstname}}</td>
						<td>{{messageC.email}}</td>
						<td>{{messageC.phone}}</td>
						<td>{{messageC.message}}</td>
						<td>
							<a href="#" class="btnCardSearch btn p-2 rounded m-2">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</tbody>
	</div>

</table>{% endblock %}
