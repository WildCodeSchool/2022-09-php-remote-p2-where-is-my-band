{% extends 'Layout/dashboard.html.twig' %}

{% block content %}
	{# modifier include #}


	<div class="container">
		<h1>
			Créer un groupe
		</h1>

		<form action="/createband" method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<div class="col-lg-6  mb-3">
					<div class="row">
						<div class="col-lg-6">
							<div class="mb-3">
								<label class="form-label">Nom du groupe</label>
								<input name="name" id="name" type="text" class="form-control mb-3" placeholder="Nom du groupe">
							</div>
						</div>
						<div class="col-lg-6">
                        <label class="form-label">Nombre de musiciens</label>
							<input name="number" id="number" type="number" class="form-control mb-3" placeholder="Nombre de musiciens">
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="mb-3">
								<label class="form-label">Votre région</label>
								<select class="form-select " name="localisation_id" id="localisation_id">
									<option value="">-</option>
									{% for localisation in localisations %}
										<option value="{{ localisation.id }}">{{localisation.region}}</option>
									{% endfor %}
								</select>
								{% if errors.localisation_id %}
									<div class="text-danger">
										{{errors.localisation_id}}
									</div>
								{% endif %}
							</div>
						</div>
						<div class="col-lg-6">
                        <label class="form-label">Email du groupe</label>
							<input name="email" type="email" id="email" class="form-control mb-3" placeholder="groupe@email.fr">
						</div>
					</div>
                    <label class="form-label">Description</label>
					<textarea name="description" id="description" class="form-control"></textarea>
				</div>
				<div class="col-lg-6">
					<div class="picture">
						<div class="mb-3">
							<label for="imageUpload" class="form-label">Photo du groupe</label>
							<input name="picture" class="form-control" type="file" id="formFile">
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-6 offset-3 col-lg-6 offset-lg-0">
					<button class="adminBtn  btn w-100" type="submit">Envoyez</button>
				</div>
			</div>
		</form>
	</div>
{% endblock %}
