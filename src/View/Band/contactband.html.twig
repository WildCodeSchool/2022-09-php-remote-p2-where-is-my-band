{% extends 'layout.html.twig' %}

{% block content %}

	<h2>Contactez votre groupe !</h2>

	<section class="container align-content-center">



		<h4>Pour contacter {{band.name}}, merci de remplir le formulaire :</h4>

		<p>Pour toute autre demande, n'hésitez pas à nous
			<a href="/contact">
				envoyer un message par ici</a>
			! ;)</p>


		<img src="./assets/images/silhouettes.png" class="d-block mx-auto mb-2 w-25 " alt="silouhettes">
		<form class="container text-center shadow p-3 mb-5 col-lg-6 bg-body rounded" method="POST">
			<div class="row g-3">
				<div class="mb-3 col-12 col-xs-12 col-md-12 col-lg-6 ">
					<label for="lastname" class="form-label">Nom</label>
					<input type="text" class="form-control shadow-sm p-3 mb-2 bg-body rounded" id="lastname" name="lastname" placeholder=" Cobain" arial-label="nom" required>
					{% if errors.lastname %}
						<div class="text-danger small">{{errors.lastname}}</div>
					{% endif %}
				</div>

				<div class="mb-3 col-12 col-xs-12 col-md-12 col-lg-6 ">
					<label for="firstname" class="form-label">Prénom</label>
					<input type="text" class="form-control shadow-sm p-3 mb-2 bg-body rounded" id="firstname" name="firstname" placeholder="Kurt" arial-label="prenom" required>
					{% if errors.firstname %}
						<div class="text-danger small">{{errors.firstname}}</div>
					{% endif %}
				</div>

				<div class="mb-3 col-12 col-xs-12 col-md-12 col-lg-6">
					<label class="form-label" for="instrument">Choisissez votre instrument</label>
					<select class="form-select p-3 mb-3" name="instrument" id="instrument" required>
						<option class="optionSearch" value="">-</option>
						{% for instrument in instruments %}
							<option class="optionSearch" value=" {{ instrument.id }} ">{{instrument.name}}</option>
						{% endfor %}
					</select>
					{% if errors.instrument %}
						<div class="text-danger small">{{errors.instrument}}</div>
					{% endif %}
				</div>

				<div class="mb-3 col-12 col-xs-12 col-md-12 col-lg-6">
					<label class="form-label" for="level">Choisissez votre niveau</label>
					{% set levels = [
					'initié',
					'débutant',
					'semi-professionnel',
        			'professionnel',
					] %}
					<select class="form-select p-3 mb-3" id="level" name="level" required>
						<option class="optionSearch" value="">-</option>
						{% for level in levels %}
							<option class="optionSearch" value=" {{ level }} ">{{level}}</option>
						{% endfor %}
					</select>
					{% if errors.level %}
						<div class="text-danger small">{{errors.level}}</div>
					{% endif %}
				</div>

				<div class="mb-3 col-12 col-xs-12 col-md-12 col-lg-6">
					<label class="form-label" for="style">Choisissez votre style</label>
					{% set styles = [
					'Classique',
					'Jazz',
					'Variété française',
        			'Variété internationale',
					'Musiques du monde ',
					'Rap',
					'Musique électronique',
					'Rock',
					'Reggae',
					'Hard Rock',
					'Heavy Metal',
       			 	'Soul',
        			'Blues',
        			'Country',
        			'Pop',
					'R\'n\'B',
        			'Folk',
					'Alternatif',
					'Gospel'
					] %}
					<select class="form-select p-3 mb-3" id="style" name="style" required>
						<option class="optionSearch" value="">-</option>
						{% for style in styles %}
							<option class="optionSearch" value=" {{ style }} ">{{style}}</option>
						{% endfor %}
					</select>
					{% if errors.style %}
						<div class="text-danger small">{{errors.style}}</div>
					{% endif %}
				</div>

				<div class=" mb-3 col-12 col-xs-12 col-md-12 col-lg-6">
					<label class="form-label" for="localisation">Choisissez votre région</label>
					<select class="form-select p-3 mb-3" name="localisation" id="localisation" required>
						<option class="optionSearch" value="">-</option>
						{% for localisation in localisations %}
							<option class="optionSearch" value=" {{ localisation.id }} ">{{localisation.region}}</option>
						{% endfor %}
					</select>
					{% if errors.localisation %}
						<div class="text-danger small">{{errors.localisation}}</div>
					{% endif %}
				</div>

				<div class="mb-3 col-12 col-xs-12 col-md-12 col-lg-6">
					<label for="email" class="form-label">E-mail</label>
					<input type="text" class="form-control shadow-sm p-3 mb-2 bg-body rounded" name="email" id="email" placeholder="nirvana@grunge.com" arial-label="email" required>
					{% if errors.email %}
						<div class="text-danger small">{{errors.email}}</div>
					{% endif %}
					{% if errors.emailFormat %}
						<div class="text-danger small">{{errors.emailFormat}}</div>
					{% endif %}
				</div>

				<div class="mb-3 col-12 col-xs-12 col-md-12 col-lg-6">
					<label for="phone" class="form-label">Téléphone</label>
					<input type="text" class="form-control shadow-sm p-3 mb-2 bg-body rounded" name="phone" id="phone" placeholder="06 66 09 28 10" arial-label="telephone" required>
					{% if errors.phone %}
						<div class="text-danger small">{{errors.phone}}</div>
					{% endif %}
					{% if errors.phoneFormat %}
						<div class="text-danger small">{{errors.phoneFormat}}</div>
					{% endif %}
				</div>

				<div class="mb-3 col-lg-12">
					<label for="message" class="form-label">Votre message</label>
					<textarea class="form-control shadow-sm p-3 mb-5 bg-body rounded" name="message" id=" message" rows=" 3" placeholder=" i'm so happy ' cause today i've found my friends... they' re in my head. ♫" arial-label=" message" required></textarea>
					{% if errors.message %}
						<div class="text-danger small">{{errors.message}}</div>
					{% endif %}
				</div>

				<div>
					<input type="submit" class="btn btn-danger col-12" id="submit"></input>
			</div>

		</div>
	</form>
</section>{% endblock %}
